<Window x:Class="Renieldavid.inventoryManagementsystem.windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Renieldavid.inventoryManagementsystem.windows"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Height="63" Margin="42,70,0,0" VerticalAlignment="Top" Width="134"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="56" Margin="42,171,0,0" VerticalAlignment="Top" Width="134"/>
        <Button Content="LOGIN" HorizontalAlignment="Left" Height="53" Margin="218,324,0,0" VerticalAlignment="Top" Width="158" Click="Button_Click"/>
        <TextBox x:Name="txtEmailAddress" HorizontalAlignment="Left" Height="63" Margin="280,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="56" Margin="280,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="357"/>

    </Grid>
</Window>
